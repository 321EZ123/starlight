<div style="display: flex; flex-direction: row; gap: 20px; flex-wrap: wrap">
  <div class="card">
    <h1>Themes</h1>
    <p>Changes the theme of the website</p>
    <button onclick="setTheme('default')">Default Theme</button>
    <button onclick="setTheme('oled')">Oled Theme</button>
    <button onclick="setTheme('red')">Red Theme</button>
  </div>
  <div class="card">
    <h1>Tab Cloak</h1>
    <p>Changes tab title and icon</p>
    <div>
      <select id="presetDropdown" onchange="applyPreset()">
        <option value="default">Default</option>
        <option value="preset1">Google Drive</option>
        <option value="preset2">Gmail</option>
        <option value="preset3">Google Search</option>
        <option value="preset4">Zoom</option>
        <option value="preset5">Meet</option>
      </select>
    </div>
  </div>
  <div class="card">
    <h1>Reset Settings</h1>
    <p>Resets all settings to default</p>
    <button onclick="resetSettings()">Reset Settings</button>
  </div>

  <script>
    // Function to set the theme dynamically
    function setTheme(theme) {
      document.body.setAttribute("theme", theme);
      // Save theme preference to localStorage
      localStorage.setItem("theme", theme);
    }

    // Function to load saved theme or set default theme on page load
    window.onload = function () {
      let savedTheme = localStorage.getItem("theme");
      if (!savedTheme) {
        savedTheme = "default"; // Set default theme if no theme is saved
        localStorage.setItem("theme", savedTheme); // Store default theme
      }
      // Apply saved or default theme
      setTheme(savedTheme);
    };
    function resetSettings() {
      localStorage.clear();
      sessionStorage.clear();
      alert("settings reset");
      window.location.reload();
    }
  </script>
</div>
